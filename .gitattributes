# Auto detect text files and perform LF normalization
* text=auto

# Lock files
pnpm-lock.yaml binary

# Database files
*.sql text eol=lf

# Prisma schema
*.prisma text eol=lf

# Config files
*.json text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Environment files
.env* text eol=lf 